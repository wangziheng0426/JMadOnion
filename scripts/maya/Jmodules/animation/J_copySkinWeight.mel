///拷贝模型权重
global proc J_copySkinWeight()
{
    
    string $sel[]=`ls  -sl`;
    if (`objectType  $sel[0]`=="transform")
    {
        string $chs[]=`listRelatives -c -shapes  $sel[0]`;
        string $skinClusters[]= `listConnections  -type skinCluster $chs[0]`;
        if (size($skinClusters)==0)
        {int $i=1;
            for ( $i=1;$i<size($chs);$i++)
            {
                $skinClusters= `listConnections  -type skinCluster $chs[$i]`;
                if (size($skinClusters)>0){break;}
            }   
        }
        select `listConnections   -type joint $skinClusters[0]`;
    }
    select -tgl $sel[1];
    SmoothBindSkin;
    select -cl;
    select $sel;
    CopySkinWeights;
    
}
