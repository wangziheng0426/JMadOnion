                button -l "导出相机" -c  "J_resourceExporterExportCam" J_expCam;
                button -l "导出动画" -c  "" J_expAni;
                button -l "批量导" -c  "" J_expAniBat;
            setParent ..;
        setParent ..;
       
    formLayout -e 
        -ap J_resourceExporter_rigframeLayout left 0 1
        -ap J_resourceExporter_rigframeLayout right 0 99
