        frameLayout -cll 1 -cl 0 -l "模型选项"  J_resourceExporter_rigframeLayout;
            string $formLayout_Temp0=`formLayout -numberOfDivisions 100 `;
                for ($iItem=0;$iItem<size($geoSetting);$iItem++)
                {
